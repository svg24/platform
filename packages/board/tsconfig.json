{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "typeRoots": [
      "types"
    ],
    "types": [
      "node",
      "react-dom",
      "react-transition-group",
      "react"
    ],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2021"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/*.d.ts"
  ]
}
