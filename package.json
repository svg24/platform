{
  "name": "svg24",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:api": "npm run tsc:api",
    "build:assets": "npm run tsc:assets && gulp --cwd packages/assets build",
    "build:board": "npm run tsc:board && vite build packages/board",
    "dev:api": "nodemon --exec 'npm run build:api && npm run node:api' --ext ts --watch packages/api/src",
    "dev:assets": "npm run build:assets && npm run node:assets",
    "dev:board": "vite packages/board",
    "dev:www": "gulp --cwd packages/www serve",
    "lint:commit": "lint-staged",
    "lint:css": "npm run lint:css:assets && npm run lint:css:board",
    "lint:css:assets": "stylelint packages/assets/src/styles/*.css",
    "lint:css:board": "stylelint packages/board/src/**/*.css",
    "lint:editor": "editorconfig-checker",
    "lint:ts": "npm run lint:ts:api && npm run lint:ts:assets && npm run lint:ts:board",
    "lint:ts:api": "eslint packages/api/**/*.{ts,d.ts}",
    "lint:ts:assets": "eslint packages/assets/src/*.ts",
    "lint:ts:board": "eslint packages/board/**/*.{ts,tsx,d.ts}",
    "node:api": "node --experimental-specifier-resolution=node --experimental-import-meta-resolve packages/api/dist/src",
    "node:assets": "node --experimental-specifier-resolution=node --experimental-import-meta-resolve packages/assets/dist",
    "prod:api": "nodemon --exec 'npm run build:api && npm run node:api' --ext js",
    "tsc:api": "tsc --project packages/api/tsconfig.json",
    "tsc:assets": "tsc --project packages/assets/tsconfig.json",
    "tsc:board": "tsc --project packages/board/tsconfig.json"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-transition-group": "^4.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.8.0",
    "editorconfig-checker": "^4.0.2",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "stylelint": "^14.2.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=16.6.2",
    "npm": ">=7.20.6"
  }
}
