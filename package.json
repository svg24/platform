{
  "name": "svg24",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-api": "tsc -p packages/api/tsconfig.json",
    "build-assets": "tsc -p packages/assets/tsconfig.json && gulp build-assets",
    "build-board": "vite build",
    "build-collection": "gulp build-collection",
    "build-www": "gulp build-www",
    "dev-api": "nodemon --exec 'yarn build-api && node --experimental-specifier-resolution=node --experimental-import-meta-resolve packages/api/dist' --ext ts --watch packages/api/src",
    "dev-assets": "yarn build-assets && node --experimental-specifier-resolution=node --experimental-import-meta-resolve packages/assets/dist",
    "dev-board": "vite",
    "dev-collection": "gulp dev-collection",
    "dev-www": "gulp serve-www",
    "lint-css": "yarn lint-css-assets && yarn lint-css-board && yarn lint-css-www",
    "lint-css-assets": "stylelint packages/assets",
    "lint-css-board": "stylelint packages/board",
    "lint-css-www": "stylelint packages/www",
    "lint-editor": "editorconfig-checker",
    "lint-root": "eslint ./*.{cjs,js}",
    "lint-staged": "lint-staged",
    "lint-ts": "yarn lint-ts-api && yarn lint-ts-assets && yarn lint-ts-board && yarn lint-ts-www",
    "lint-ts-api": "eslint packages/api",
    "lint-ts-assets": "eslint packages/assets",
    "lint-ts-board": "eslint packages/board",
    "lint-ts-www": "eslint packages/www",
    "prod-api": "node --experimental-specifier-resolution=node --experimental-import-meta-resolve api",
    "prod-assets": "node --experimental-specifier-resolution=node --experimental-import-meta-resolve assets"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.18",
    "@types/node": "^17.0.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-transition-group": "^4.4.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.1.4",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "editorconfig-checker": "^4.0.2",
    "esbuild": "^0.14.11",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "gulp": "^4.0.2",
    "gulp-postcss": "^9.0.1",
    "gulp-rev": "^9.0.0",
    "gulp-rev-rewrite": "^5.0.0",
    "gulp-sitemap": "^8.0.0",
    "html-minifier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "nodemon": "^2.0.15",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.5",
    "postcss-csso": "^6.0.0",
    "postcss-import": "^14.0.2",
    "postcss-media-minmax": "^5.0.0",
    "stylelint": "^14.2.0",
    "stylelint-order": "^5.0.0",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.12",
    "typescript": "^4.5.4",
    "vinyl": "^2.2.1",
    "vite": "^2.7.10"
  },
  "engines": {
    "node": ">=16",
    "yarn": ">=1"
  }
}
